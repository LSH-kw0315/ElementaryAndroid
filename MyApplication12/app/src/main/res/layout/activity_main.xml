<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:layout_weight="1">
        <EditText
            android:hint="숫자1 입력"
            android:layout_weight="1"
            android:id="@+id/Edit1"
            android:layout_margin="10dp"
            android:layout_span="5" />
    </TableRow>
    <TableRow
        android:layout_weight="1">

        <EditText
            android:hint="숫자2 입력"
            android:layout_weight="1"
            android:id="@+id/Edit2"
            android:layout_margin="10dp"
            android:layout_span="5" />
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn0"
            android:layout_margin="5dp"
            android:text="0"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn1"
            android:layout_margin="5dp"
            android:text="1"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn2"
            android:layout_margin="5dp"
            android:text="2"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn3"
            android:layout_margin="5dp"
            android:text="3"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn4"
            android:layout_margin="5dp"
            android:text="4"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn5"
            android:layout_margin="5dp"
            android:text="5"/>
        <Button
            android:id="@+id/Btn6"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="6"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn7"
            android:layout_margin="5dp"
            android:text="7"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn8"
            android:layout_margin="5dp"
            android:text="8"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn9"
            android:layout_margin="5dp"
            android:text="9"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/BtnAdd"
            android:text="더하기"
            android:layout_margin="10dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/BtnSub"
            android:text="빼기"
            android:layout_margin="10dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/BtnMul"
            android:text="곱하기"
            android:layout_margin="10dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/BtnDiv"
            android:text="나누기"
            android:layout_margin="10dp"
            android:layout_span="5"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:id="@+id/Res"
            android:text="계산결과: "
            android:layout_margin="10dp"
            android:layout_span="5"
            android:textColor="#ff0000"
            />
    </TableRow>
</TableLayout>